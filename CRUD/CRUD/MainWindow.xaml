<Window x:Class="CRUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD"
        mc:Ignorable="d"
        Title="Contactos" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="txtNombre" Margin="25,15,25,15"/>
            <TextBox x:Name="txtCorreo" Margin="25,15,25,15"/>
            <TextBox x:Name="txtTelefono" Margin="25,15,25,15"/>
            <Button Content="Guardar" x:Name="btnGuardar" Click="btnGuardar_Click" Margin="90,15,95,15"/>
        </StackPanel>
    </Grid>
</Window>
